{curl 6.0, 7.0, 8.0 applet}
{curl-file-attributes character-encoding = "shift-jis"}
{applet manifest = "manifest.mcurl"}

{import * from COM.CURL.ADVANCED-UI.UTILS}
{api-version-switch
 case "7.0+", "8.0+" do
    || do nothing
 case "6.0+" do
    {import * from COM.CURL.GUI.STYLED-CONTROLS}
    {install-style-sheet {manifest-url "file", "DEFAULT-STYLE-SHEET"}}
}

{value
    || hokada (FIXME) *FileChooserTextField(new!)
    let first-time?:bool = false
    {spaced-vbox

        {TextField
            width = 10cm,
            editable? = false
        },
        || amori
        {CommandButton
            {on Action do
                {def (file-url, flg) = {choose-file-with-size-range min-size = 1, max-size = 10}}
                {popup-message file-url & " " & flg}
            }
        }
        
    }
}

